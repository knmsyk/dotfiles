[alias]
        graph = log --graph --branches --date=short --pretty='format:%cd %C(yellow)%h %C(cyan)%d %C(red)%s %Creset -- %an, %ar %Creset'
        g = log --graph --branches --date=short --pretty='format:%cd %C(yellow)%h %C(cyan)%d %C(red)%s %Creset -- %an, %ar %Creset'
        logall = log --decorate --graph --branches --tags --remotes --name-status
        l = log --decorate --graph --branches --tags --remotes --name-status
        a = add .
        aa = add --all .
        amend = commit -a --amend
        b = branch
        c = commit -am
        d = diff
        p = pull
        r = remote -v
        s = status
        ls = ls-files
[color]
        ui = true
